<%- include('partials/header') %>
<link rel="stylesheet" href="../css/signup.css">
<link rel="stylesheet" href="../css/focusPost.css">
</head>
<body>
    <%- include('partials/brand_name') %>
    <%- include('partials/nav_logged_in',{name,username}) %>
    <br id="spacer">
    
    <div class="title_container">
        <h1><%=post.title%> </h1>
        <h4>Tag: <%=post.tag%></h4>
        <span>@<%=post.username%></span>
    </div>
   
    
    <hr>
    <p></p>

    <div class="content_container">
        <p><%=post.content%></p>
        <span><%=Math.round(post.moneyCollected/post.moneyNeeded*100)%>% to goal, $<%=post.moneyCollected%> out of $<%=post.moneyNeeded%> collected</span>

    </div>

    <div class="donate_container">
       <!-- 3 donate buttons for 1 3 5 -->
         <button class="donate_button" value="1">Donate $1</button>
            <button class="donate_button" value="3">Donate $3</button>
            <button class="donate_button" value="5">Donate $5</button>

    </div>
    <script src="../js/focusPost.js"></script>
</body>
</html>